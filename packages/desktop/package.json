{
  "name": "@carta/desktop",
  "version": "0.1.0-proto4",
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k -n vite,electron -c blue,green \"pnpm --filter @carta/web-client dev --port 5373\" \"wait-on http://localhost:5373 && tsc && electron .\"",
    "dev:electron": "tsc && electron .",
    "build": "pnpm --filter @carta/web-client build && pnpm --filter @carta/server build && tsc && node scripts/copy-renderer.mjs",
    "package": "electron-builder"
  },
  "dependencies": {
    "@carta/compiler": "workspace:*",
    "@carta/domain": "workspace:*",
    "@carta/document": "workspace:*",
    "@carta/server": "workspace:*",
    "lib0": "^0.2.102",
    "ws": "^8.18.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.9.3",
    "wait-on": "^8.0.3"
  }
}
