{
  "name": "@carta/server",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    },
    "./mcp/stdio": {
      "types": "./dist/mcp/stdio.d.ts",
      "import": "./dist/mcp/stdio.js"
    }
  },
  "bin": {
    "carta-mcp": "./dist/mcp/stdio.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp/stdio.js"
  },
  "dependencies": {
    "@carta/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "express": "^5.2.1",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "typescript": "^5.8.3"
  }
}
