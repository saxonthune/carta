{
  "name": "@carta/server",
  "version": "0.1.0-alpha.1",
  "type": "module",
  "exports": {
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    },
    "./mcp/stdio": {
      "types": "./dist/mcp/stdio.d.ts",
      "import": "./dist/mcp/stdio.js"
    },
    "./document-server-core": {
      "types": "./dist/document-server-core.d.ts",
      "import": "./dist/document-server-core.js"
    },
    "./workspace-server": {
      "types": "./dist/workspace-server.d.ts",
      "import": "./dist/workspace-server.js"
    }
  },
  "bin": {
    "carta-mcp": "./dist/mcp/stdio.js",
    "carta": "./dist/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "tsc --watch",
    "dev:build": "tsc",
    "mcp": "node dist/mcp/stdio.js",
    "document-server": "node dist/document-server-cli.js",
    "init": "node dist/cli.js init",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@carta/document": "workspace:*",
    "@carta/schema": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "debug": "^4.4.3",
    "lib0": "^0.2.102",
    "ws": "^8.18.0",
    "y-mongodb-provider": "^0.2.1",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
