{
  "name": "carta",
  "private": true,
  "version": "0.1.0-proto.5",
  "packageManager": "pnpm@10.28.1",
  "license": "AGPL-3.0-only",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "scripts": {
    "demo": "pnpm --filter @carta/web-client demo",
    "client": "pnpm --filter @carta/web-client client",
    "build": "pnpm --filter @carta/web-client build",
    "build:all": "pnpm -r build",
    "preview": "pnpm --filter @carta/web-client preview",
    "test": "pnpm --filter @carta/document typecheck && pnpm --filter @carta/domain test && pnpm --filter @carta/compiler test && pnpm --filter @carta/document test && pnpm --filter @carta/web-client test && pnpm --filter @carta/server test",
    "test:watch": "pnpm --filter @carta/web-client test:watch",
    "test:ui": "pnpm --filter @carta/web-client test:ui",
    "test:coverage": "pnpm --filter @carta/web-client test:coverage",
    "test:e2e": "pnpm --filter @carta/web-client test:e2e",
    "test:static": "pnpm build && pnpm --filter @carta/web-client test:static",
    "test:e2e:ui": "pnpm --filter @carta/web-client test:e2e:ui",
    "test:all": "pnpm --filter @carta/web-client test:all",
    "lint": "eslint .",
    "server": "docker compose up -d mongodb && pnpm --filter @carta/server build && pnpm --filter @carta/server document-server",
    "server:memory": "pnpm --filter @carta/server build && STORAGE=memory pnpm --filter @carta/server document-server",
    "server:stop": "docker compose down",
    "desktop": "pnpm --filter @carta/desktop dev",
    "build:desktop": "pnpm --filter @carta/desktop build",
    "package:desktop": "pnpm --filter @carta/desktop package"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
